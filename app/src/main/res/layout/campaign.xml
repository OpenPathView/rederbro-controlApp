<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/campaignTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage campaign"
        android:textSize="30sp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"/>

    <EditText
        android:id="@+id/campaignName"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:text="picturesInfo"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/campaignTitle"

        android:layout_marginTop="15sp"/>

    <Button
        android:id="@+id/newCampaign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New"
        android:textAllCaps="false"

        app:layout_constraintTop_toBottomOf="@id/campaignName"
        app:layout_constraintLeft_toLeftOf="parent"

        android:layout_marginLeft="50sp"
        android:layout_marginTop="15sp"/>

    <Button
        android:id="@+id/attachCampaign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Attach"

        app:layout_constraintTop_toBottomOf="@id/campaignName"
        app:layout_constraintRight_toRightOf="parent"

        android:layout_marginRight="50sp"
        android:layout_marginTop="15sp"/>

</android.support.constraint.ConstraintLayout>